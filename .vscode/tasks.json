{
    // APP main build task
    "version": "2.0.0",
    "tasks": [
        {
            "label": "clang++ build assignment",
            "type": "shell",
            "command": "/usr/bin/clang++",
            "args": [
                "-g",
                "${workspaceFolder}/assignment${input:assignment}test.cpp",
                {
                    "value": "${workspaceFolder}/assignment${input:assignment}/*.cpp",
                    "quoting": "escape"
                },
                "-Xclang",
                "-flto-visibility-public-std",
                "-o",
                "${workspaceFolder}/assignment${input:assignment}.out"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
        },
        {
            "label": "zip handin",
            "type": "shell",
            "command": "zip",
            "args": [
                "-u",
                "-j",
                "${workspaceFolder}/handin${input:assignment}.zip",
                {
                    "value": "${workspaceFolder}/assignment${input:assignment}/*.cpp",
                    "quoting": "escape"
                },
                {
                    "value": "${workspaceFolder}/assignment${input:assignment}/*.h",
                    "quoting": "escape"
                }
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ],
    "inputs": [
        {
            "id": "assignment",
            "type": "promptString",
            "description": "Assignment number",
            "default": "",
            "password": false
        }
    ]
}