{
    // APP main build task
    "version": "2.0.0",
    "tasks": [
        {
            "label": "clang++ build assignment",
            "type": "shell",
            "command": "/usr/bin/clang++",
            "args": [
                "-g",
                "${workspaceFolder}/main.cpp",
                {
                    "value": "${workspaceFolder}/assignment${input:assignment}/*.cpp",
                    "quoting": "escape"
                },
                "-Xclang",
                "-flto-visibility-public-std",
                "-o",
                "${workspaceFolder}/assignment${input:assignment}.out"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "group": {"kind": "build", "isDefault": true}
        },
        {
            "label": "zip handin",
            "type": "shell",
            "command": "zip",
            "args": [
                "-u", // update only with new or changed files
                "${workspaceFolder}/handin${input:assignment}.zip", // output
                "${workspaceFolder}/assignment${input:assignment}/*.cpp",
                "${workspaceFolder}/assignment${input:assignment}/*.h",
            ],
            "options": {"cwd": "${workspaceFolder}"},
        }
    ],
    "inputs": [
        {
            "id": "assignment",
            "type": "promptString",
            "description": "Assignment number",
            "default": "",
            "password": false
        }
    ]
}